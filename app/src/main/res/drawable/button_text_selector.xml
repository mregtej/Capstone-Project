<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"
        android:state_enabled="false"
        android:textColor="@color/onColorTextButtonDisabledAndNotPressed"
        android:drawable="@color/colorTextButtonDisabledAndNotPressed" />

    <item android:state_pressed="true"
        android:state_enabled="true"
        android:textColor="@color/onColorTextButtonEnabledAndPressed"
        android:drawable="@color/colorTextButtonEnabledAndPressed"
        android:translationZ="6dp" />

    <item android:state_pressed="true"
        android:state_enabled="false"
        android:textColor="@color/onColorTextButtonDisabledAndPressed"
        android:drawable="@color/colorTextButtonDisabledAndPressed" />

    <item android:state_pressed="false"
        android:state_enabled="true"
        android:textColor="@color/onColorTextButtonEnabledAndNotPressed"
        android:drawable="@color/colorTextButtonEnabledAndNotPressed" />

</selector>