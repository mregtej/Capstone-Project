<resources>

    <!-- Base application theme. -->
    <style name="MyMealPlannerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyMealPlannerTitles" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MyMealPlannerHeaderTableTitles" parent="MyMealPlannerTitles">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MyMealPlannerBoldTitlesInWhite" parent="MyMealPlannerTitles">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyMealPlannerBiggerTitles" parent="MyMealPlannerTitles">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MyMealPlannerSubTitles" parent="MyMealPlannerTitles">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyMealPlannerSmallTitlesInBlack" parent="MyMealPlannerTitles">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyMealPlannerTextButtons" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MyMealPlannerIconButtons" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
